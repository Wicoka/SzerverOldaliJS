<%- include('header') %>
    <%- include('navbar') %>
        <main>
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-lg-6 col mt-5">
                        <h1>
                            Autó
                            <% if (typeof car==='undefined' ) { %>
                                hozzáadása
                                <% } else { %>
                                    módosítása
                                    <% } %>
                        </h1>
                        <form method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Név</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    value="<%= (typeof car === 'undefined') ? '' : car.name %>" />
                            </div>
                            <div class="mb-3">
                                <label for="brand" class="form-label">Márka</label>
                                <input type="text" class="form-control" id="brand" name="brand"
                                    value="<%= (typeof car === 'undefined') ? '' : car.brand %>" />
                            </div>
                            <div class="mb-3">
                                <label for="licencePlate" class="form-label">Rendszám</label>
                                <input type="text" class="form-control" id="licencePlate" name="licencePlate"
                                    value="<%= (typeof car === 'undefined') ? '' : car.licencePlate %>" />
                            </div>
                            <div class="mb-3">
                                <label for="chassisNumber" class="form-label">Alvázszám</label>
                                <input type="text" class="form-control" id="chassisNumber" name="chassisNumber"
                                    value="<%= (typeof car === 'undefined') ? '' : car.chassisNumber%>" />
                            </div>
                            <div class="d-flex justify-content-around">
                                <input type="submit" class="btn btn-primary" href="cars.html" value="Mentés" />
                                <a class="btn btn-danger" href="cars.html">Mégsem</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        <%- include('footer') %>