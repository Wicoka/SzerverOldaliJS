<%- include('header') %>
    <%- include('navbar') %>
        <main>
            <div class="container relative-wrapper">
                <div class="row mt-5">
                    <div class="col">
                        <h1>Szervizek</h1>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Név</th>
                                    <th scope="col">Cím</th>
                                    <th scope="col">Autók száma</th>
                                    <th scope="col">Rendszámok</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% services.forEach(function(service){ %>
                                    <tr>
                                        <td class="align-middle">
                                            <%= service.name %>
                                        </td>
                                        <td class="align-middle">
                                            <%= service.address %>
                                        </td>
                                        <td class="align-middle">
                                            <%= service.carCount %>
                                        </td>
                                        <td class="align-middle">
                                            <% service.licencePlates.forEach(function(plate){ %>
                                                <%= plate %>
                                                    <% }); %>
                                                        <% if (service.licencePlates.length===0) { %>
                                                            -
                                                            <% } %>
                                        </td>
                                        <td>
                                            <a class="btn btn-success" href="/service/<%= service._id %>/car"><i
                                                    class="fas fa-plus"></i>
                                                <i class="fas fa-car"></i></a>
                                            <a class="btn btn-primary" href="/service/edit/<%= service._id %> "><i
                                                    class="fas fa-edit"></i></a>
                                            <a class="btn btn-danger" href="/service/list"><i
                                                    class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <a class="btn btn-primary add-button mt-2" href="/service/new">
                    Szerviz hozzáadása
                </a>
            </div>
        </main>
        <%- include('footer') %>