<%- include('header') %>
    <%- include('navbar') %>
        <main>
            <div class="container">
                <div class="row mt-3">
                    <div class="col-lg-6 col-md-12">
                        <h1>
                            <%= service.name %> autói
                        </h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Név</th>
                                    <th scope="col">Márka</th>
                                    <th scope="col">Rendszám</th>
                                    <th scope="col">Alvázszám</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cars.forEach(function(car){ %>
                                    <% if (service._cars.includes(car._id)) { %>
                                        <tr>
                                            <td class="align-middle">
                                                <%= car.name %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.brand %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.licencePlate %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.chassisNumber %>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger"
                                                    href="/service/<%= service._id %>/car/<%= car._id %>/delete"><i
                                                        class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <h1>Új autók</h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Név</th>
                                    <th scope="col">Márka</th>
                                    <th scope="col">Rendszám</th>
                                    <th scope="col">Alvázszám</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cars.forEach(function(car){ %>
                                    <% if (!service._cars.includes(car._id) && car._service===null){ %>
                                        <tr>
                                            <td class="align-middle">
                                                <%= car.name %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.brand %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.licencePlate %>
                                            </td>
                                            <td class="align-middle">
                                                <%= car.chassisNumber %>
                                            </td>
                                            <td>
                                                <a class="btn btn-success"
                                                    href="/service/<%= service._id %>/car/<%= car._id %>/add"><i
                                                        class="fas fa-plus"></i></a>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
        <%- include('footer') %>